<Window x:Class="Demo.CustomSaveFileDialog.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Demo.CustomSaveFileDialog"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="Demo - Custom Save File Dialog"
    Width="300"
    Height="200"
    d:DataContext="{x:Static local:App.MainWindow}">

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            IsReadOnly="True"
            Text="{Binding Path, Mode=OneWay}" />
        <Button
            Grid.Column="1"
            Content="Save..."
            Command="{Binding SaveFileCommand}" />
    </Grid>
</Window>
